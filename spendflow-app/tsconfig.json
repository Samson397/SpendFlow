{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // Essential strict options that should be enabled
    "noImplicitAny": true, // Enable - critical for type safety
    "noImplicitReturns": true, // Enable - prevents missing return statements
    "noImplicitThis": true, // Enable - prevents this context issues
    "noUnusedLocals": false, // Keep disabled temporarily
    "noUnusedParameters": false, // Keep disabled temporarily
    "exactOptionalPropertyTypes": false, // Temporarily disabled
    "noImplicitOverride": false, // Temporarily disabled
    "noPropertyAccessFromIndexSignature": false, // Temporarily disabled
    "noUncheckedIndexedAccess": false, // Temporarily disabled
    "noFallthroughCasesInSwitch": false, // Temporarily disabled
    // Additional professional settings
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "preserveWatchOutput": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "dist/types/**/*.ts",
    "dist/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "jest.config.ts",
    "**/*-backup*",
    "**/*backup*",
    "**/*-old*",
    "**/*old*",
    "**/.*"
  ]
}
