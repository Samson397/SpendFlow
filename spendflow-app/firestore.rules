rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data, admins can read all
      allow read: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
      
      // Users can update their own data, admins can update any
      allow update: if request.auth != null && 
        (request.auth.uid == userId || isAdmin());
    }
    
    // Cards collection
    match /cards/{cardId} {
      // Users can manage their own cards, admins can manage all
      allow read, create, update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      // Users can manage their own transactions, admins can manage all
      allow read, create, update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Expenses collection
    match /expenses/{expenseId} {
      // Users can manage their own expenses, admins can manage all
      allow read, create, update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Income collection
    match /income/{incomeId} {
      // Users can manage their own income, admins can manage all
      allow read, create, update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // Contact messages - any authenticated user can create, admins can read all
    match /contactMessages/{messageId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
    }
    
    // Messages collection
    match /messages/{messageId} {
      // Users can read their own messages, admins can read all
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.userId || isAdmin());
      
      // Users can create messages, admins can manage all
      allow create: if request.auth != null;
      allow update, delete: if isAdmin();
    }
    
    // System collection (for admin stats)
    match /system/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Default deny all other operations
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
