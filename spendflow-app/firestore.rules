rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY RULES FOR DEBUGGING - ALLOW ALL READS/WRITES
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Keep these functions for later use when we restore security
    function isAdmin() { return true; }
    function isCountQuery() { return true; }
    
    // Users collection
    match /users {
      // Allow admins full access to all documents
      allow read, write: if isAdmin();
      
      // Allow users to read and update their own document
      match /{userId} {
        allow read, update: if request.auth != null && request.auth.uid == userId;
      }
      
      // Explicitly allow count operations with any filters for admin dashboard
      allow list: if isAdmin() || isCountQuery();
      allow get: if isAdmin() || isCountQuery();
      
      // Special rule for count queries with filters
      allow list: if isCountQuery() && (
        // Allow count of all users
        request.query.where == null ||
        // Allow count with any filter for admin
        isAdmin() ||
        // Allow count with lastActive filter
        (request.query.where[0] == 'lastActive' && request.query.where[1] == '>=') ||
        // Allow count with createdAt filter
        (request.query.where[0] == 'createdAt' && request.query.where[1] == '>=')
      );
      
      // Allow direct count queries from getCountFromServer
      allow list: if request.method == 'get' && 
                 request.query.limit != null && 
                 request.query.limit == 0;
    }
    
    // User status collection for online/offline tracking
    match /status {
      // Allow counting statuses for admin dashboard
      allow list: if isAdmin() || isCountQuery();
      
      match /{userId} {
        // Users can see who's online, but only admins can see all statuses
        allow read: if request.auth != null && 
          (request.auth.uid == userId || isAdmin());
        
        // Users can update their own status
        allow write: if request.auth != null && 
          (request.auth.uid == userId || isAdmin());
      }
    }
    
    // Announcements collection
    match /announcements/{announcementId} {
      // Anyone can read announcements
      allow read: if true;
      
      // Only admins can create, update, or delete announcements
      allow create, update, delete: if isAdmin();
      
      // Validate announcement data
      match /{document=**} {
        allow read: if true;
        allow write: if isAdmin() &&
          request.resource.data.keys().hasAll(['title', 'content', 'isActive', 'startDate', 'endDate']) &&
          request.resource.data.title is string &&
          request.resource.data.content is string &&
          request.resource.data.isActive is bool &&
          request.resource.data.startDate is timestamp &&
          request.resource.data.endDate is timestamp;
      }
    }
    
    // Contact messages
    match /contactMessages/{messageId} {
      allow create: if request.auth != null;
      allow read: if isAdmin();
    }
    
    // Transactions collection
    match /transactions {
      // Allow counting transactions for admin dashboard
      allow list: if isAdmin() || isCountQuery();
      
      match /{transactionId} {
        // Users can read their own transactions, admins can read all
        allow read: if request.auth != null && 
          (request.auth.uid == resource.data.userId || isAdmin());
        
        // Users can create their own transactions, admins can create any
        allow create: if request.auth != null && 
          (request.auth.uid == request.resource.data.userId || isAdmin());
        
        // Only admins can update or delete transactions
        allow update, delete: if isAdmin();
      }
    }
    
    // Messages collection
    match /messages {
      // Allow counting messages for admin dashboard
      allow list: if isAdmin() || isCountQuery();
      
      match /{messageId} {
        // Users can read their own messages, admins can read all
        allow read: if request.auth != null && 
          (request.auth.uid == resource.data.userId || isAdmin());
        
        // Users can create messages, admins can manage all
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }
    }
    
    // Activities collection
    match /activities/{activityId} {
      // Anyone can read activities for dashboard display
      allow read: if true;
      
      // Users can create their own activities, admins can create any
      allow create: if request.auth != null;
      
      // Only admins can update or delete activities
      allow update, delete: if isAdmin();
    }
    
    // Cards collection
    match /cards {
      // Allow counting cards for admin dashboard
      allow list: if isAdmin() || isCountQuery();
      
      match /{cardId} {
        // Users can read their own cards, admins can read all
        allow read: if request.auth != null && 
          (resource.data.userId == request.auth.uid || isAdmin());
          
        // Users can create their own cards, admins can create any
        allow create: if request.auth != null && 
          (request.auth.uid == request.resource.data.userId || isAdmin());
          
        // Users can update/delete their own cards, admins can manage all
        allow update, delete: if request.auth != null && 
          (resource.data.userId == request.auth.uid || isAdmin());
      }
    }
    
    // Alerts collection
    match /alerts {
      // Allow counting alerts for admin dashboard
      allow list: if isAdmin() || isCountQuery();
      
      match /{alertId} {
        // Users can read their own alerts, admins can read all
        allow read: if request.auth != null && 
          (isAdmin() || resource.data.userId == request.auth.uid);
        
        // Only admins can create alerts (regular users create alerts through Cloud Functions)
        allow create: if isAdmin();
        
        // Only admins can update or delete alerts
        allow update, delete: if isAdmin();
        
        // Validate alert data
        match /{document=**} {
          allow read: if request.auth != null && 
            (isAdmin() || resource.data.userId == request.auth.uid);
          allow write: if isAdmin();
        }
      }
    }
  }
}
